{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",

    "baseUrl": ".",
    "paths": {
      "main/*": ["src/*"],
      "Components/*": ["src/components/*"],
      "Elements/*": ["src/elements/*"],
      "Utils/*": ["src/utils/*"],
      "CSS/*": ["css/*"],
    },

    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
